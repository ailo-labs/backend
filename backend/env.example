# .env.example
# Copy to .env and replace <> with your real values

# MongoDB
MONGO_URI="mongodb+srv://<username>:<password>@<cluster-address>/<dbname>?retryWrites=true&w=majority"
# Optional if DB name not in MONGO_URI
MONGODB_DB_NAME="<your_db_name>"

# OpenAI (optional)
OPENAI_API_KEY="<your_openai_api_key>"

# Hugging Face Hub (optional)
HF_HUB_TOKEN="<your_hf_api_token>"
HF_HUB_REPO_ID="<your_hf_username>/<your_model_repo>"

# Model cache (server)
MODEL_CACHE_DIR="/mnt/cache/hf_models"

# Server
PORT=8000
